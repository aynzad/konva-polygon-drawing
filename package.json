{
  "name": "konva-polygon-drawing",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "craco start",
    "start:react": "react-scripts start",
    "build": "craco build",
    "eject": "craco eject"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/icons-material": "^5.10.16",
    "@mui/material": "^5.10.17",
    "@reduxjs/toolkit": "^1.9.1",
    "konva": "^8.3.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konva": "^18.2.3",
    "react-redux": "^8.0.5",
    "react-scripts": "5.0.1",
    "react-use": "^17.4.0",
    "redux-saga": "^1.2.1"
  },
  "devDependencies": {
    "@craco/craco": "^7.0.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.45",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.3",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    },
    "overrides": [
      {
        "files": [
          "**/*.js",
          "**/*.ts",
          "**/*.tsx"
        ],
        "rules": {
          "simple-import-sort/imports": [
            "error",
            {
              "groups": [
                [
                  "^react$",
                  "^next",
                  "^[a-z]"
                ],
                [
                  "^@"
                ],
                [
                  "^~"
                ],
                [
                  "^\\.\\.(?!/?$)",
                  "^\\.\\./?$"
                ],
                [
                  "^\\./(?=.*/)(?!/?$)",
                  "^\\.(?!/?$)",
                  "^\\./?$"
                ]
              ]
            }
          ]
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "endOfLine": "auto"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
